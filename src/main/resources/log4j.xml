<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration>
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %p [(%c{3})] %m%n"/>
		</layout>
	</appender>
	<appender name="httpLog" class="org.apache.log4j.RollingFileAppender">
		<param name="file" value="requests.log"/>
	    <param name="MaxFileSize" value="2MB"/>
	    <param name="MaxBackupIndex" value="3"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %p [(%c{3})] %m%n"/>
		</layout>
	</appender>

  	<appender name="errorLog" class="org.apache.log4j.RollingFileAppender">
		<param name="file" value="errors.log"/>
	    <param name="MaxFileSize" value="2MB"/>
	    <param name="MaxBackupIndex" value="3"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %p [(%c{3})] %m%n"/>
		</layout>
	</appender>

	<logger name="simulator" additivity="false">
		<level value="info" />
		<appender-ref ref="httpLog" />
		<appender-ref ref="console" />
	</logger>
	<root>
		<priority value="error" />
		<appender-ref ref="errorLog" />
		<appender-ref ref="console" />
	</root>
</log4j:configuration>

